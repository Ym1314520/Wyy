<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD3700"
    tools:context=".login_register.login_ui.LoginUi">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center|top"
            android:background="@drawable/logo" />


        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="140dp"
            android:layout_gravity="center|bottom"
            android:background="@drawable/login_corner"
            android:text="手机号登录"
            android:textColor="#CD3700"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="95dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:text="注 册"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/weixin"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="32dp"
            android:background="@drawable/qq"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="65dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/weibo"/>
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="right">
        <LinearLayout
            android:layout_width="300dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#CD3700">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center|top"
                    android:background="@drawable/logo" />
                <TextView
                    android:id="@+id/names"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    android:layout_gravity="center|top"
                    android:text="注 册"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"/>
            </FrameLayout>

            <EditText
                android:id="@+id/nickname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="30dp"
                android:background="@drawable/login_corner"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:hint="请输入昵称"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_corner"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/phones"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_corner"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:hint="请输入手机号码"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/captcha"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/login_corner"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:hint="请输入验证码"/>

                <Button
                    android:id="@+id/send_captcha"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:text="发送验证码"
                    android:textSize="15sp"
                    android:lines="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/send_corner"/>
            </LinearLayout>

            <Button
                android:id="@+id/login_go"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="20dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="注 册"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/login_corner2"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>




</androidx.drawerlayout.widget.DrawerLayout>